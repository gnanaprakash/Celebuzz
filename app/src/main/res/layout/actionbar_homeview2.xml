<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/actionBar_HomeView2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/imageButton_LeftToggle2"
        android:src="@drawable/ic_view_headline_black_24dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:background="#FF9933"
        android:contentDescription="@string/blabla" />

    <TextView
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="76"
        android:background="#CC33CC"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center|center_horizontal"
        android:text="Celebuzz" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:background="#FF9999"
        android:id="@+id/imageButton_Search2"
        android:src="@drawable/ic_search_black_24dp"
        android:contentDescription="@string/blabla" />

</LinearLayout>
